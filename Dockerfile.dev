# Development Dockerfile for Michishirube
# Optimized for hot reload and fast development cycles

FROM golang:1.24.6-alpine

# Install development dependencies
RUN apk add --no-cache git ca-certificates tzdata gcc musl-dev sqlite-dev make

# Install development tools
RUN go install github.com/golang/mock/mockgen@latest && \
    go install github.com/swaggo/swag/cmd/swag@latest && \
    go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest

# Create non-root user for development
RUN addgroup -g 1001 -S dev && \
    adduser -u 1001 -S dev -G dev

# Set working directory
WORKDIR /app

# Copy go mod files for dependency caching
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Create data directory
RUN mkdir -p /data && chown -R dev:dev /data /app

# Switch to non-root user
USER dev

# Expose port
EXPOSE 8080

# Set development environment variables
ENV PORT=8080
ENV DB_PATH=/data/michishirube-dev.db
ENV LOG_LEVEL=debug
ENV CGO_ENABLED=1

# Default command for development (can be overridden)
CMD ["go", "run", "./cmd/server"]